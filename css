@font-face {
    font-family: 'Terminal Grotesque';
    src: url('https://mordictionary.neocities.org/terminal-grotesque.eot'); /* IE9 Compat Modes */
    src: url('https://mordictionary.neocities.org/terminal-grotesque.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
         url('https://mordictionary.neocities.org/terminal-grotesque.woff2') format('woff2'), /* Super Modern Browsers */
         url('https://mordictionary.neocities.org/terminal-grotesque.woff') format('woff'), /* Pretty Modern Browsers */
         url('https://mordictionary.neocities.org/terminal-grotesque.ttf') format('truetype'), /* Safari, Android, iOS */
         url('https://mordictionary.neocities.org/terminal-grotesque.svg#TerminalGrotesque') format('svg'); /* Legacy iOS */
    font-weight: normal; /* or 'bold', depending on your font file */
    font-style: normal; /* or 'italic', depending on your font file */
}

